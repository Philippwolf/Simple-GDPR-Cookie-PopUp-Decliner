{
    "$schema": "https://raw.githubusercontent.com/Philippwolf/Simple-GDPR-Cookie-PopUp-Decliner/master/rules.schema.json",
    "ford": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "url",
                        "url": [
                            ".*www\\Wford\\W.*"
                        ],
                        "regexp": true
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "url",
                        "url": [
                            ".*www\\Wford\\W.*"
                        ],
                        "regexp": true
                    }
                ]
            }
        ],
        "methods": [
            {
                "name": "HIDE_CMP"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": "[href='/cookie-settings']"
                    }
                },
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "waitcss",
                            "target": {
                                "selector": "#performance"
                            },
                            "retries": 10,
                            "waitTime": 250
                        },
                        {
                            "type": "consent",
                            "consents": [
                                {
                                    "matcher": {
                                        "type": "checkbox",
                                        "target": {
                                            "selector": "#performance"
                                        }
                                    },
                                    "toggleAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "#performance"
                                        }
                                    },
                                    "type": "B"
                                },
                                {
                                    "matcher": {
                                        "type": "checkbox",
                                        "target": {
                                            "selector": "#functionality"
                                        }
                                    },
                                    "toggleAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "#functionality"
                                        }
                                    },
                                    "type": "A"
                                },
                                {
                                    "matcher": {
                                        "type": "checkbox",
                                        "target": {
                                            "selector": "#ad"
                                        }
                                    },
                                    "toggleAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "#ad"
                                        }
                                    },
                                    "type": "F"
                                }
                            ]
                        }
                    ]
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "waitcss",
                            "target": {
                                "selector": "[data-action*='cookieAcknowledgedAll']"
                            },
                            "retries": 10,
                            "waitTime": 250
                        },
                        {
                            "type": "click",
                            "target": {
                                "selector": "[data-action*='cookieAcknowledgedAll']"
                            }
                        }
                    ]
                },
                "name": "SAVE_CONSENT"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}
