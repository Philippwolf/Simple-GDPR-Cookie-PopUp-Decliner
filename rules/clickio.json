{
    "$schema": "https://raw.githubusercontent.com/Philippwolf/Simple-GDPR-Cookie-PopUp-Decliner/master/rules.schema.json",
    "clickio": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": "#cl-consent"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".cl-consent__inner"
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": ".cl-consent__btn--outline"
                    }
                },
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "foreach",
                            "target": {
                                "selector": ".cl-consent-tabs__item"
                            },
                            "action": {
                                "type": "list",
                                "actions": [
                                    {
                                        "type": "ifcss",
                                        "target": {
                                            "selector": ".cl-consent-node-h4",
                                            "textFilter": [
                                                "Archiviare e/o accedere a informazioni su un dispositivo"
                                            ]
                                        },
                                        "trueAction": {
                                            "type": "consent",
                                            "consents": [
                                                {
                                                    "trueAction": {
                                                        "type": "click",
                                                        "target": {
                                                            "selector": ".cl-consent-node-input"
                                                        }
                                                    },
                                                    "type": "D"
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "type": "ifcss",
                                        "target": {
                                            "selector": ".cl-consent-node-h4",
                                            "textFilter": [
                                                "Selezionare annunci basici (basic ads)",
                                                "Creare un profilo di annunci personalizzati",
                                                "Selezionare annunci personalizzati",
                                                "Pubblicare tecnicamente annunci o contenuti"
                                            ]
                                        },
                                        "trueAction": {
                                            "type": "consent",
                                            "consents": [
                                                {
                                                    "trueAction": {
                                                        "type": "click",
                                                        "target": {
                                                            "selector": ".cl-consent-node-input"
                                                        }
                                                    },
                                                    "type": "F"
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "type": "ifcss",
                                        "target": {
                                            "selector": ".cl-consent-node-h4",
                                            "textFilter": [
                                                "Creare un profilo di contenuto personalizzato",
                                                "Selezionare contenuti personalizzati"
                                            ]
                                        },
                                        "trueAction": {
                                            "type": "consent",
                                            "consents": [
                                                {
                                                    "trueAction": {
                                                        "type": "click",
                                                        "target": {
                                                            "selector": ".cl-consent-node-input"
                                                        }
                                                    },
                                                    "type": "E"
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "type": "ifcss",
                                        "target": {
                                            "selector": ".cl-consent-node-h4",
                                            "textFilter": [
                                                "Valutare le performance degli annunci",
                                                "Valutare le performance dei contenuti",
                                                "Applicare ricerche di mercato per generare approfondimenti sul pubblico"
                                            ]
                                        },
                                        "trueAction": {
                                            "type": "consent",
                                            "consents": [
                                                {
                                                    "trueAction": {
                                                        "type": "click",
                                                        "target": {
                                                            "selector": ".cl-consent-node-input"
                                                        }
                                                    },
                                                    "type": "B"
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "type": "ifcss",
                                        "target": {
                                            "selector": ".cl-consent-node-h4",
                                            "textFilter": [
                                                "Scansione attiva delle caratteristiche del dispositivo ai fini dell’identificazione",
                                                "Ricevere e usare le caratteristiche che il dispositivo invia automaticamente ai fini dell’identificazione"
                                            ]
                                        },
                                        "trueAction": {
                                            "type": "consent",
                                            "consents": [
                                                {
                                                    "trueAction": {
                                                        "type": "click",
                                                        "target": {
                                                            "selector": ".cl-consent-node-input"
                                                        }
                                                    },
                                                    "type": "D"
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "type": "ifcss",
                                        "target": {
                                            "selector": ".cl-consent-node-h4",
                                            "textFilter": [
                                                "Sviluppare e perfezionare i prodotti",
                                                "Utilizzare dati di geolocalizzazione precisi",
                                                "Garantire la sicurezza, prevenire frodi e debug",
                                                "Abbinare e combinare fonti di dati offline",
                                                "Collegare diversi dispositivi"
                                            ]
                                        },
                                        "trueAction": {
                                            "type": "consent",
                                            "consents": [
                                                {
                                                    "trueAction": {
                                                        "type": "click",
                                                        "target": {
                                                            "selector": ".cl-consent-node-input"
                                                        }
                                                    },
                                                    "type": "X"
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": ".cl-consent__btn--outline"
                    },
                    "parent": {
                        "selector": ".cl-consent__buttons--three-btns",
                        "textFilter": [
                            "Salva impostazioni",
                            "Accetta selezionati"
                        ]
                    }
                },
                "name": "SAVE_CONSENT"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "hide",
                            "target": {
                                "selector": "#cl-consent"
                            }
                        }
                    ]
                },
                "name": "HIDE_CMP"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}
