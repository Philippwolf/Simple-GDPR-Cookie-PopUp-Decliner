{
    "$schema": "https://raw.githubusercontent.com/Philippwolf/Simple-GDPR-Cookie-PopUp-Decliner/master/rules.schema.json",
    "rusal": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".cookie[data-cookie='']"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".cookie[data-cookie='']",
                            "displayFilter": true
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "action": {
                    "type": "hide",
                    "target": {
                        "selector": ".cookie[data-cookie='']"
                    }
                },
                "name": "HIDE_CMP"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": "[data-cookie-customize='']"
                    }
                },
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "consent",
                    "consents": [
                        {
                            "matcher": {
                                "type": "checkbox",
                                "target": {
                                    "selector": "#analytical-cookies"
                                }
                            },
                            "toggleAction": {
                                "type": "click",
                                "target": {
                                    "selector": "#analytical-cookies"
                                }
                            },
                            "type": "B"
                        }
                    ]
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": "[data-cookie-settings-ok='']"
                    }
                },
                "name": "SAVE_CONSENT"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}
