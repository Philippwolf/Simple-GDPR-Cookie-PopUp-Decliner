{
    "$schema": "https://raw.githubusercontent.com/Philippwolf/Simple-GDPR-Cookie-PopUp-Decliner/master/rules.schema.json",
    "gov.uk": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".cookie-settings__confirmation"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".cookie-settings__confirmation"
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "name": "HIDE_CMP"
            },
            {
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "wait",
                            "waitTime": 2500
                        },
                        {
                            "type": "consent",
                            "consents": [
                                {
                                    "matcher": {
                                        "type": "css",
                                        "target": {
                                            "selector": "[name='cookies-usage'][value='on']"
                                        }
                                    },
                                    "trueAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "[name='cookies-usage'][value='on']"
                                        }
                                    },
                                    "falseAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "[name='cookies-usage'][value='off']"
                                        }
                                    },
                                    "type": "B"
                                }
                            ]
                        },
                        {
                            "type": "consent",
                            "consents": [
                                {
                                    "matcher": {
                                        "type": "css",
                                        "target": {
                                            "selector": "[name='cookies-campaigns'][value='on']"
                                        }
                                    },
                                    "trueAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "[name='cookies-campaigns'][value='on']"
                                        }
                                    },
                                    "falseAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "[name='cookies-campaigns'][value='off']"
                                        }
                                    },
                                    "type": "X"
                                }
                            ]
                        },
                        {
                            "type": "consent",
                            "consents": [
                                {
                                    "matcher": {
                                        "type": "css",
                                        "target": {
                                            "selector": "[name='cookies-settings'][value='on']"
                                        }
                                    },
                                    "trueAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "[name='cookies-settings'][value='on']"
                                        }
                                    },
                                    "falseAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "[name='cookies-settings'][value='off']"
                                        }
                                    },
                                    "type": "A"
                                }
                            ]
                        }
                    ]
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "click",
                            "target": {
                                "selector": "[type='submit']",
                                "textFilter": [
                                    "Save changes"
                                ]
                            }
                        },
                        {
                            "type": "click",
                            "target": {
                                "selector": ".cookie-settings__prev-page"
                            }
                        }
                    ]
                },
                "name": "SAVE_CONSENT"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}
